@page "/profile"

<div class="profile-container">
    <div class="profile-header">
        <div class="profile-image">
            <!-- Placeholder image -->
        <img src ="data:image/jpeg;base64," alt = "Profile Image" >
        </div>
        <div class="profile-info">
            <h1>@Name @Surname</h1>
            <p>@Occupation</p>
            <p>@Location</p>
            <!-- Additional profile details can be added here -->
        </div>
    </div>
    <div class="profile-bio">
        <h2>Bio</h2>
        <p>@Bio</p>
    </div>
    <div class="profile-cta">
        <button class="btn btn-primary" onclick="sendMessage()">Send Message</button>
        <button class="btn btn-secondary" onclick="viewPosts()">View Posts</button>
    </div>
</div>

@code {
    // Profile data
    string Name { get; set; } = "Davron";
    string Surname { get; set; } = "Ziyoev";
    string Occupation { get; set; } = "Software Engineer";
    string Location { get; set; } = "New York";
    string Bio { get; set; } = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed quis lectus vel eros hendrerit vehicula.";

    // JavaScript interop functions
    private async Task sendMessage()
    {
        await JSRuntime.InvokeVoidAsync("sendMessage", $"{Name} {Surname}");
    }

}

@code {
    [Inject] IJSRuntime JSRuntime { get; set; }
}

<style>
    body
    {
        background-color: rgb(210, 237, 210);
    }
    /* Profile container */
    .profile-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 00px 5px 20px rgba(0, 0, 0, 0.1);
    }

    /* Profile header */
    .profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
    }

    .profile-image img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        margin-right: 20px;
    }

    .profile-info {
        flex-grow: 1;
    }

    .profile-info h1 {
        font-size: 24px;
        margin: 0;
    }

    .profile-info p {
        font-size: 16px;
        margin: 5px 0;
        color: #666;
    }

    /* Profile bio */
    .profile-bio h2 {
        font-size: 20px;
        margin-bottom: 10px;
    }

    .profile-bio p {
        font-size: 16px;
        line-height: 1.6;
    }

    /* Profile call-to-action */
    .profile-cta {
        margin-top: 20px;
        text-align: center;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        margin: 0 10px;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
    }

    .btn:hover {
        opacity: 0.8;
    }
</style>
